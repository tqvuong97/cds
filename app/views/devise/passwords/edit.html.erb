
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="limiter">
      <div class="container-login100">
        <div class="wrap-login100">
           <form class="login100-form validate-form">
            <span class="login100-form-title">
              <b>CREATE NEW PASSWORD</b>
            </span>

            <div class="textwarning">
              <p class="alert"><%= alert %></p>
            </div>

            <div class="wrap-input100 validate-input" >
              <span class="focus-input100"></span>     
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "New password", class:"input100" %>  
            </div>
           
            <div class="wrap-input100 validate-input" >
              <span class="focus-input100"></span>     
                <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm password", class:"input100" %>  
            </div>
                 
            <div class="container-login100-form-btn">
              <%= f.submit "Save", class:"login100-form-btn" %>
            </div>

           </form>
        </div>
      </div>
    </div>
  <% end %>
